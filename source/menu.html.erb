
<div id="contents"> <!-- start of contents --> 
  <h2 class="main-course"><span>Main Course</span></h2>
  <div id="menus">
    <ul class="main">

      <% for submenu_id in data.menu.submenu.keys %>
      <li>
	<h3><%= data.menu.submenu[submenu_id].name %></h3>
	<ul>
	  <% for item_id in data.menu.submenu[submenu_id].items.keys %>
	  <li>
	    <span class="price"><%= data.menu.submenu[submenu_id].items[item_id].price %></span>
	    <%= data.menu.submenu[submenu_id].items[item_id].name %>
	    <p><%= data.menu.submenu[submenu_id].items[item_id].detail %></p>
	  </li>
	  <% end %>
	</ul>
      </li>
      <% end %>
    </ul>
    
    <br>

    <%= data.menu.note %>

  </div>
</div> <!-- end of contents -->
